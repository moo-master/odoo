<odoo>
    <record id="product_product_form_view_inherited" model="ir.ui.view">
        <field name="name">product.product.form.view.inherited</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_standard_price']" after="inside">
                <field name="is_recurring_type"/>
            </xpath>
        </field>
    </record>
</odoo>