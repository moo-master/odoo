<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_res_config_settings_view_form_report" model="ir.ui.view">
        <field name="name">inherit.res.config.settings.view.form.inherit.account.report</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account_reports.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='account_reports_settings']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" title="default value">
                    <div class="o_setting_left_pane" />
                    <div class="o_setting_right_pane">
                        <label for="negotiate_duration"/>
                        <field name="negotiate_duration" class="oe_inline"/>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box" title="default value">
                    <div class="o_setting_left_pane" />
                    <div class="o_setting_right_pane">
                        <label for="payment_fee_percent"/>
                        <field name="payment_fee_percent" class="oe_inline"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
