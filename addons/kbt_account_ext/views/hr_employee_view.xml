<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_hr_employee_signature_view_form" model="ir.ui.view">
        <field name="name">inherit.hr.employee.signature.view.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='private_email']" position="after">
                <field name="signature" widget="image" class="oe_left oe_avatar"/>
            </xpath>
        </field>
    </record>

</odoo>
