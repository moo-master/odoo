<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_res_config_settings_view_form_accounting" model="ir.ui.view">
        <field name="name">inherit.res.config.settings.view.form.inherit.account.accounting</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='analytic']" position="after">
                <h2>Footer Signature</h2>
                <div class="row mt16 o_settings_container" id="footer_signature">
                    <div class="col-12 col-lg-6 o_setting_box" title="Issue By">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Default Issue Employee</span>
                            <div class="text-muted">
                                Default Issue Employee of your company
                            </div>
                            <div class="text-muted">
                                <field name="issue_eid"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" title="Approve By">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Default Approve Employee</span>
                            <div class="text-muted">
                                Default Approve Employee of your company
                            </div>
                            <div class="text-muted">
                                <field name="approve_eid"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
