<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_business_sale_order_view_form" model="ir.ui.view">
        <field name="name">inherit.sale.order.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="priority" eval="150"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="x_is_interface"/>
            </xpath>

            <xpath expr="//field[@name='order_line']//tree//field[@name='sequence']" position="attributes">
                <attribute name="attrs">{'column_invisible': [('parent.x_is_interface', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='x_is_interface']" position="before">
                <field name="so_type_id" string="Business Type" attrs="{'required': [('x_is_interface','=', True)]}"/>
            </xpath>
        </field>
    </record>

</odoo>
